{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "vue/setup-compiler-macros": true
  },
  "parserOptions": {
    "parser": "@typescript-eslint/parser"
  },
  "extends": [
    "plugin:vue/vue3-essential",
    "eslint:recommended",
    "@vue/typescript/recommended",
    "@vue/prettier"
  ],
  "rules": {
    "no-console": "error",
    "no-debugger": "error",
    "vue/attributes-order": [
      "error",
      {
        "alphabetical": true
      }
    ],
    "vue/script-setup-uses-vars": "error",
    "vue/multi-word-component-names": "off"
  },
  "ignorePatterns": ["/dist/**/*"]
}
