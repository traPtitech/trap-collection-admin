{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "newLine": "lf",
    "lib": ["esnext", "dom", "dom.iterable"],
    "types": ["vite/client"],
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "/@/*": ["src/*"]
    }
  }
}
